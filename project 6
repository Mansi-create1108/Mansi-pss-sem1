#include<stdio.h>
void main()
{
int id,unit;
float charges;
char name[25];
printf("Enter your id\n");
scanf("%d",&id);
printf("Enter your name\n");
scanf("%d",&name);
printf("Enter your unit consumption\n");
scanf("%d",&unit);

if(unit<200)
{charges=unit*1.20;
if(charges<100)
{printf("your bill is 100");}
else
{printf("your bill is %f",charges);}
}
else if(unit>200 && unit < 400)
{charges=unit*1.5;
if(charges>400)
{printf("your bill is %f",charges+(charges/15));}
else
{printf("your bill is %f",charges);}
}
else if(unit>=400 && unit < 600)
{charges=unit*1.80;
if(charges>400)
{printf("your bill is %f",charges+(charges/15));}
else if(unit>=600 )
{charges=unit*2;
if(charges>400)
{printf("your bill is %f",charges+(charges/15));}
else 
{printf("wrong input");}
}
