#include<stdio.h>
void main()
{
int a,b,c;
printf("Enter 2 numbers");
scanf("%d",&a);
scanf("%d",&b);
printf("Enter a number");
printf("1 for addition , 2 for subraction,3 for multiplication and 4 for division");
scanf("%d",&c);
switch(c)
{
case 1:
{printf("%d+%d=%d",a,b,a+b);}
case 2:
{printf("%d-%d=%d",a,b,a-b);}
case 3:
{printf("%d*%d=%d",a,b,a*b);}
case 4:
{printf("%d/%d=%d",a,b,a/b);}
default:
{printf("wrong input");}
}
}
